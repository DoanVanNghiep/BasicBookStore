<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
	<display-name>BasicBookStore</display-name>
	<welcome-file-list>
		<welcome-file>clientHome</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>vnua.fita.bookstore.servlet.LoginServlet</servlet-class>
	</servlet>

	<context-param>
		<param-name>jdbcURL</param-name>
		<param-value>jdbc:mysql://localhost:3306/bookstore?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>jdbcUsername</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>jdbcPassword</param-name>
		<param-value>0945057018</param-value>
	</context-param>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>vnua.fita.bookstore.servlet.LogoutServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>adminServlet</servlet-name>
		<servlet-class>vnua.fita.bookstore.servlet.AdminHomeServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>deleteBook</servlet-name>
		<servlet-class>vnua.fita.bookstore.servlet.DeleteBookServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>editBook</servlet-name>
		<servlet-class>vnua.fita.bookstore.servlet.EditBookServlet</servlet-class>
	</servlet>
		<servlet>
		<servlet-name>createBook</servlet-name>
		<servlet-class>vnua.fita.bookstore.servlet.CreateBookServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>vnua.fita.bookstore.servlet.ajaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vnpayQuery</servlet-name>
        <servlet-class>vnua.fita.bookstore.common.vnpayQuery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vnpayRefund</servlet-name>
        <servlet-class>vnua.fita.bookstore.common.vnpayRefund</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>testVNPAY</servlet-name>
        <servlet-class>Views/testPaymentVNPAY.jsp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/vnpayajax</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>testVNPAY</servlet-name>
        <url-pattern>/testVNPAY</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vnpayQuery</servlet-name>
        <url-pattern>/vnpayquery/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vnpayRefund</servlet-name>
        <url-pattern>/vnpayrefund/*</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>adminServlet</servlet-name>
		<url-pattern>/adminHome</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>createBook</servlet-name>
		<url-pattern>/createBook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deleteBook</servlet-name>
		<url-pattern>/deleteBook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>editBook</servlet-name>
		<url-pattern>/editBook</url-pattern>
	</servlet-mapping>
</web-app>